<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/jpg" href="/img/favicon.png"/>
    <link rel="stylesheet" href="/css/login.css" />

    <title>Nirog | Login</title>
  </head>
  <body>
    <div class="loader-wrapper">
   
      <div class="loader-container">
          <div class="loader">
            <img src="https://i.imgur.com/BbQQdiRr.png" alt="Lifeline">
            <div class="slide-box">
              <div class="solid"></div>
            </div>
          </div>
          <div class="heading">
            <h1>Loading</h1>
            <div class="dot" id="d1"></div>
            <div class="dot" id="d2"></div>
            <div class="dot" id="d3"></div>
        
          </div>
        </div>
          </div>
    <div class="content">
      <div class="text">Login Here</div>
      <form action="/auth/login" method="POST">
        <div class="field">
          <span class="fas fa-user"></span>
          <input type="text" name="email" required placeholder="Email" />
        </div>
        <div class="field">
          <span class="fas fa-lock"></span>
          <input type="password" name="password" placeholder="Password" />
        </div>
        <div class="forgot-pass"><a href="#">Forgot Password?</a></div>
        <button type="submit">
          Sign in
        </button>
        <div class="signup">
          Not registered yet?
          <a href="/signup">signup now</a>
        </div>
      </form>
    </div>

    <a href="/" class="back-button">
      <div class="arrow-wrap">
        <span class="arrow-part-1"></span>
        <span class="arrow-part-2"></span>
        <span class="arrow-part-3"></span>
      </div>
    </a>
  </body>
  <script
  src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>
  <script>
      $(window).on("load", function(){
          $(".loader-wrapper").fadeOut("slow")
      })
  </script>
  <script>
    let slideBox = document.querySelector('.slide-box');
let solid = document.querySelector('.solid');

let width = 100;

let slide = setInterval(() => {
    solid.style.width = `${width}%`;
    width -= 1;
}, 20)

setTimeout(() => {
    clearInterval(slide);
    solid.style.width = `100%`;
}, 2050);

setInterval(() => {

    width = 100;
    let slide = setInterval(() => {
        solid.style.width = `${width}%`;
        width -= 1;
    }, 20)

    setTimeout(() => {
        clearInterval(slide);
    }, 2050);

}, 2050);
</script>
  <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</html>